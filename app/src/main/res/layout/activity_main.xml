<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5C7CF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/divButton"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="316dp"
        android:background="#FF9800"
        android:backgroundTint="#4D6B78"
        android:text="รท"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#BD5E5E" />

    <Button
        android:id="@+id/subButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="#FF9800"
        android:backgroundTint="#4D6B78"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mulButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mulButton"
        app:layout_constraintTop_toBottomOf="@+id/mulButton"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="#BD5E5E"
        tools:text="-" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="68dp"
        android:background="#FF9800"
        android:backgroundTint="#4D6B78"
        android:text="+"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/subButton"
        app:layout_constraintTop_toTopOf="@+id/subButton"
        app:strokeColor="#BD5E5E"
        tools:text="+" />

    <Button
        android:id="@+id/mulButton"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:background="#FF9800"
        android:backgroundTint="#4D6B78"
        android:text="*"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/divButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/divButton"
        app:layout_constraintTop_toTopOf="@+id/divButton"
        app:strokeColor="#BD5E5E" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="150dp"
        android:layout_height="129dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="#4D6B78"
        android:text="Clear"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/divButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divButton" />

    <Button
        android:id="@+id/percentButton"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#4D6B78"
        android:text="%"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/addButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/addButton"
        app:layout_constraintTop_toTopOf="@+id/addButton" />

    <EditText
        android:id="@+id/number2"
        android:layout_width="299dp"
        android:layout_height="67dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:hint="Second Number"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintEnd_toEndOf="@+id/result"
        app:layout_constraintTop_toBottomOf="@+id/number1" />

    <EditText
        android:id="@+id/number1"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="51dp"
        android:layout_marginBottom="7dp"
        android:ems="10"
        android:hint="First Number"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/number2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/number2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="312dp"
        android:layout_height="60dp"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="15dp"
        android:hint="Result"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/divButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number2" />

</androidx.constraintlayout.widget.ConstraintLayout>